<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Resultado" >

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="@string/titulo_resultado"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/nome_aparelho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="41dp"
        android:text="@string/nome_aparelho"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/consumo_aparelho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nome_aparelho"
        android:layout_marginTop="28dp"
        android:text="@string/consumo_aparelho"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/gasto_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/consumo_aparelho"
        android:layout_marginTop="20dp"
        android:text="@string/gasto_total"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/valor_cobrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gasto_total"
        android:layout_marginTop="26dp"
        android:text="@string/valor_cobrado"
        android:textSize="20dp" />

    <Button
        android:id="@+id/voltar_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/valor_cobrado"
        android:layout_marginTop="64dp"
        android:text="@string/voltar_inicio" />

</RelativeLayout>